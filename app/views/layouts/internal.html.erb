<%# For When the user is "inside" of the application, after they have been authenticated %>
<!DOCTYPE html>
<html>
  <head>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Peer Evaluation Tool - <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'internal', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
      <h1><%= link_to "Peer Evaluation Tool", "/" %></h1>
      <ul class="nav small">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#"></a>
          <ul class="dropdown-menu">
            <li>
              <a class="nav-link" href="/about">About</a>  
            </li>
            <li>
              <a class="nav-link" href="/login">Login</a>  
            </li>
            <li>
              <a class="nav-link sign-up" href="/sign_up">Sign Up</a>
            </li>
          </ul>
        </li>
      </ul>
      <ul class="nav large">
        
        <li class="nav-item">
          <a class="nav-link" href="/about">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link sign-up" href="/sign_up">Sign Up</a>
        </li>
      </ul>
      <div></div>
    </header>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </body>
  <footer>
    <p>Created by Stephen Chou, Jeffrey Gaydos, Will Schneider, and Jeremy Yao
    <p class="right">For CSE 3901, Autumn 2021</p>
  </footer>
</html>