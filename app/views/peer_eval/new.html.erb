<% provide(:title, 'Form view View (Student)') %>

<div>
 <%= form_with(model: @peer_eval, url: "new", local: true) do |f| %>
  
  <%= f.label :score %>
  <%= f.text_field :score %>

  <%= f.label :comment %>
  <%= f.text_field :comment %>

  <%= f.label :evaluated_peer %>
  <%= f.collection_select :evaluated_user_id, @users, :id, :name %>

  <%= f.submit "Submit peer evaluation" %>

 <% end %>
</div> 