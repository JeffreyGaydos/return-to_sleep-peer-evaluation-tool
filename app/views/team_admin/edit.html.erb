<% provide(:title, 'Edit Teams') %>

<div class="container">
  <h1>Editing <%= @team.name %></h1>

  <!--  If the user entered invalid stuff for teams, render error messages-->
  <%= form_for :team, url:team_path(@team), method: :patch do |f| %>
    <%if not @team.errors.blank? %>
      <!--    <div class="alert alert-danger"> <%#= @post.full %></div>-->
      <% @team.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"> <%=msg %></div>
      <%end %>
    <%end %>
    <!--    Always rendered forms-->
    <p>
      <%= f.label :name%>
      <br>
      <%= f.text_field :name, {:class => 'form-control'} %>
    </p>
    <p>
      <%= f.label :course_id%>
      <br>
      <%= f.number_field :course_id, {:class => 'form-control'} %>
<!--      Commented line below fills in class number instead-->
<!--      <input class="form-control" type="number" value=<%#= @team.course.class_number %> name="team[course_id]" id="team_course_id">-->
    </p>
    <p>
      <%= f.submit ({:class => 'btn btn-primary'}) %>
      <%= link_to "Back", teams_path, :class => 'btn btn-primary'%>
    </p>
  <% end %>
</div>